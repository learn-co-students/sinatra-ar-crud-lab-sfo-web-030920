<h1>Update form</h1>

<form action="/articles/<%= @article.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <p>Title</p> <input type="text" name="title" value= "<%= @article.title %>">
    <p>Content</p> <input type="text" name="content" value= "<%= @article.content %>">
    <input type="submit" value="Update article">
</form>